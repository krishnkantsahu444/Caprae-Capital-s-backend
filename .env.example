# Anti-bot configuration
PROXY_LIST_PATH=proxies.txt
USER_AGENTS_PATH=user_agents.txt

# Database - SQLite (legacy)
DB_PATH=leads.db

# Database - MongoDB (primary)
MONGO_URI=mongodb+srv://user:password@cluster0.mongodb.net/
MONGO_DB_NAME=crashlens
MONGO_COLLECTION=businesses

# Crawler settings
HEADLESS=true
MAX_PER_SESSION=50
MAX_REQUESTS_PER_CRAWL=20

# Delays (milliseconds)
MIN_DELAY_MS=1000
MAX_DELAY_MS=3500

# Detail page scraping configuration
DETAIL_PAGE_TIMEOUT=20000                # milliseconds to wait when loading detail page
MAX_DETAIL_ATTEMPTS=3                    # retry attempts for detail page
DETAIL_PAGE_DELAY_MS_MIN=1500           # min random delay before visiting detail
DETAIL_PAGE_DELAY_MS_MAX=3500           # max random delay before visiting detail

# Phone normalization
PHONE_NORMALIZE_REGEX=[^0-9+]           # characters to strip from phone numbers

# Database behavior
DB_UPSERT_ON_INSERT=true                # enable atomic upsert behavior
